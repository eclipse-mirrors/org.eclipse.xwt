<Shell xmlns="http://www.eclipse.org/xwt/presentation"
    xmlns:x="http://www.eclipse.org/xwt"
    text="TabFolder Styles Test">
	<Shell.layout>
		<GridLayout numColumns="1"/>
	</Shell.layout>
	<TabFolder>
		<TabItem text="item1">
			<TabItem.control>
				<Label text="TabItem 1"/>
			</TabItem.control>
		</TabItem>
		<TabItem text="item2">
			<TabItem.control>
				<Label text="TabItem 2"/>
			</TabItem.control>
		</TabItem>
		<TabItem text="item3">
			<TabItem.control>
				<Label text="TabItem 3"/>
			</TabItem.control>
		</TabItem>
		<TabFolder.layoutData>
			<GridData horizontalAlignment="FILL" verticalAlignment="FILL" 
				grabExcessVerticalSpace="true"
				grabExcessHorizontalSpace="true"/>
		</TabFolder.layoutData>		
	</TabFolder>
	<TabFolder x:style="BOTTOM">
		<TabItem text="item1">
			<TabItem.control>
				<Label text="TabItem 1"/>
			</TabItem.control>
		</TabItem>
		<TabItem text="item2">
			<TabItem.control>
				<Label text="TabItem 2"/>
			</TabItem.control>
		</TabItem>
		<TabItem text="item3">
			<TabItem.control>
				<Label text="TabItem 3"/>
			</TabItem.control>
		</TabItem>
		<TabFolder.layoutData>
			<GridData horizontalAlignment="FILL" verticalAlignment="FILL" 
				grabExcessVerticalSpace="true"
				grabExcessHorizontalSpace="true"/>
		</TabFolder.layoutData>		
	</TabFolder>
</Shell>